<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.sinch.messagingtutorial.app.LoginActivity">









    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="jesse Tenant"
        android:id="@+id/btnJesseTenant"
        android:layout_alignTop="@+id/btnGGManager"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jesse Manager"
        android:id="@+id/btnJesseManager"
        android:layout_below="@+id/btnJesseTenant"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GG Manager"
        android:id="@+id/btnGGManager"
        android:layout_below="@+id/signupButton"
        android:layout_alignRight="@+id/btnGusGuy"
        android:layout_alignEnd="@+id/btnGusGuy"
        android:layout_marginTop="46dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gusguyman"
        android:id="@+id/btnGusGuy"
        android:layout_below="@+id/btnGGManager"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:id="@+id/loginButton"
        android:layout_marginLeft="42dp"
        android:layout_marginStart="42dp"
        android:layout_below="@+id/loginPassword"
        android:textColor="@color/primary"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp" />

    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIGN UP"
        android:id="@+id/signupButton"
        android:layout_marginRight="51dp"
        android:layout_marginEnd="51dp"
        android:textColor="@color/primary"
        android:layout_alignTop="@+id/loginButton"
        android:layout_alignRight="@+id/loginPassword"
        android:layout_alignEnd="@+id/loginPassword" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/loginUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:met_baseColor="@color/primary_text"
        app:met_primaryColor="@color/primary_dark"
        app:met_errorColor="@color/error"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="Email or Username"
        app:met_floatingLabelTextColor = "@color/primary"
        android:hint="Email or Username"
        android:layout_marginBottom="42dp"
        android:layout_above="@+id/loginPassword"
        android:layout_centerHorizontal="true" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/loginPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:met_baseColor="@color/primary_text"
        app:met_primaryColor="@color/primary_dark"
        app:met_errorColor="@color/error"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="Card Holder Name"
        app:met_floatingLabelTextColor = "@color/primary"
        android:inputType="textPassword"
        android:hint="Password"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome To At Ease! Please Sign Up If You Are New To The App!"
        android:id="@+id/textView5"
        android:textColor="@color/primary"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp" />


</RelativeLayout>
