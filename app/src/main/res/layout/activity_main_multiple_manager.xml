<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:weightSum="8"
    tools:context="com.atease.at_ease.MainTenantActivity">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:minHeight="60dp">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Work\nOrders"
            android:id="@+id/btnWorkOrder"
            android:padding="1dp"
            android:layout_margin="1dp"
            android:background="@color/work_orders"
            android:height="40dp"
            android:layout_weight="1" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Payment\nHistory"
            android:id="@+id/btnPaymentHistory"
            android:layout_weight="1"
            android:singleLine="false"
            android:allowUndo="true"
            android:padding="1dp"
            android:background="@color/payment_history"
            android:height="40dp" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_weight="7"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:minHeight="60dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="fill_parent" />

    </LinearLayout>


</LinearLayout>