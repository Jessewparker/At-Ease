<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.atease.at_ease.NewMainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="logout"
        android:id="@+id/logoutButton"
        android:gravity="center_vertical|center_horizontal"
        android:background="@color/secondary"
        android:textColor="@color/primary"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btnJesseTenant"
        android:layout_alignEnd="@+id/btnJesseTenant" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="jesse Tenant"
        android:id="@+id/btnJesseTenant"
        android:layout_below="@+id/logoutButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jesse Manager"
        android:id="@+id/btnJesseManager"
        android:layout_below="@+id/btnJesseTenant"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GG Manager"
        android:id="@+id/btnGGManager"
        android:layout_below="@+id/btnJesseManager"
        android:layout_alignRight="@+id/btnGusGuy"
        android:layout_alignEnd="@+id/btnGusGuy" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gusguyman"
        android:id="@+id/btnGusGuy"
        android:layout_below="@+id/btnGGManager"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/btnLogin"
        android:layout_below="@+id/btnGusGuy"
        android:layout_alignLeft="@+id/btnJesseManager"
        android:layout_alignStart="@+id/btnJesseManager"
        android:layout_marginTop="120dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SignUp"
        android:id="@+id/btnSignUp"
        android:layout_alignTop="@+id/btnLogin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="49dp"
        android:layout_marginStart="49dp" />

</RelativeLayout>
