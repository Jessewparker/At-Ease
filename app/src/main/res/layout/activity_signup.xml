<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Sign Up"
            android:id="@+id/textView2"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/primary"
            />

    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20px">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tenant"
            android:id="@+id/isTenant"
            android:checked="false"
            android:layout_marginRight="20dp"


     />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manager"
            android:id="@+id/isManager"

            android:checked="false"
            android:layout_marginLeft="20dp"


         />

    </LinearLayout>




    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="20dp">


        <com.rengwuxian.materialedittext.MaterialEditText
            app:met_baseColor="@color/primary_text"
            app:met_primaryColor="@color/primary_dark"
            app:met_errorColor="@color/error"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="First Name"
            app:met_floatingLabelTextColor = "@color/primary"
            android:hint="First Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:layout_weight="1"
            android:ems="10"
            android:id="@+id/firstNameField"


        />

        <com.rengwuxian.materialedittext.MaterialEditText
            app:met_baseColor="@color/primary_text"
            app:met_primaryColor="@color/primary_dark"
            app:met_errorColor="@color/error"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="Last Name"
            app:met_floatingLabelTextColor = "@color/primary"
            android:hint="Last Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:layout_weight="1"
            android:ems="10"
            android:id="@+id/lastNameField"
          />

        </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="20dp">


        <com.rengwuxian.materialedittext.MaterialEditText
            app:met_baseColor="@color/primary_text"
            app:met_primaryColor="@color/primary_dark"
            app:met_errorColor="@color/error"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="Username"
            app:met_floatingLabelTextColor = "@color/primary"
            android:hint="Username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/usernameField"
            app:met_maxCharacters="40"
            android:layout_weight="1"
          />



        </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="20dp">



        <com.rengwuxian.materialedittext.MaterialEditText
            app:met_baseColor="@color/primary_text"
            app:met_primaryColor="@color/primary_dark"
            app:met_errorColor="@color/error"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="Password"
            app:met_floatingLabelTextColor = "@color/primary"
            android:hint="Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordField"
            android:layout_weight="1"
            />

        <com.rengwuxian.materialedittext.MaterialEditText
            app:met_baseColor="@color/primary_text"
            app:met_primaryColor="@color/primary_dark"
            app:met_errorColor="@color/error"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="Confirm Password"
            app:met_floatingLabelTextColor = "@color/primary"
            android:hint="Confirm Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"

            android:ems="10"
            android:id="@+id/passwordConfirmField"
            android:layout_weight="1"
         />

        </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="20dp">

    <com.rengwuxian.materialedittext.MaterialEditText
        app:met_baseColor="@color/primary_text"
        app:met_primaryColor="@color/primary_dark"
        app:met_errorColor="@color/error"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="Email Address"
        app:met_floatingLabelTextColor = "@color/primary"
        android:hint="Email Address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/emailField"
        android:layout_weight="1"
        />
        </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="20dp">

    <com.rengwuxian.materialedittext.MaterialEditText
        app:met_baseColor="@color/primary_text"
        app:met_primaryColor="@color/primary_dark"
        app:met_errorColor="@color/error"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="Phone Number"
        app:met_floatingLabelTextColor = "@color/primary"
        android:hint="Phone Number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/phoneNumberField"

 />

        </LinearLayout>

        <Button

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:id="@+id/doneSignUp"
            android:layout_marginTop="24dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/primary"
            />


</LinearLayout>
    </ScrollView>