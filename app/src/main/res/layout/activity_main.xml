<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">



        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SignIn"
            android:id="@+id/signin"
            android:layout_alignBaseline="@+id/ggm"
            android:layout_alignBottom="@+id/ggm"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Work-Order"
            android:id="@+id/new_work_order"
            android:layout_below="@+id/signin"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inbox"
            android:id="@+id/inbox"
            android:layout_below="@+id/new_work_order"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manager Payments"
            android:id="@+id/manager_payments"
            android:layout_above="@+id/hannah"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tenant Payments"
            android:id="@+id/tenant_payments"
            android:layout_alignTop="@+id/hannah"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manny"
            android:id="@+id/manny"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mark"
            android:id="@+id/mark"
            android:layout_below="@+id/manny"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GG Manager"
            android:id="@+id/ggm"
            android:layout_below="@+id/mark"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Derek"
            android:id="@+id/derek"
            android:layout_below="@+id/ggm"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Syd"
            android:id="@+id/syd"
            android:layout_below="@+id/derek"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jes"
            android:id="@+id/jes"
            android:layout_below="@+id/syd"
            android:layout_alignRight="@+id/syd"
            android:layout_alignEnd="@+id/syd" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hannah"
            android:id="@+id/hannah"
            android:layout_below="@+id/jes"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Justin"
            android:id="@+id/justin"
            android:layout_below="@+id/hannah"
            android:layout_alignRight="@+id/hannah"
            android:layout_alignEnd="@+id/hannah" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tom"
            android:id="@+id/tom"
            android:layout_below="@+id/justin"
            android:layout_alignRight="@+id/justin"
            android:layout_alignEnd="@+id/justin" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MESSAGING"
            android:id="@+id/messaging"
            android:layout_below="@+id/tenant_payments"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="logout"
            android:id="@+id/logoutButton"
            android:gravity="center_vertical|center_horizontal"
            android:background="@color/secondary"
            android:textColor="@color/primary"
            android:layout_gravity="center_horizontal"
            android:layout_above="@+id/signin"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</LinearLayout>